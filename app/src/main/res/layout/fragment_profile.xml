<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardBackgroundColor="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_arrow_icon"
                app:tint="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/profile"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/settings_icon"
                app:tint="@color/black" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/fl_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:elevation="4dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardView">

        <ImageView
            android:id="@+id/iv_image_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/image_circular_background"
            android:backgroundTintMode="multiply"
            android:src="@drawable/baseline_profile"
            app:tint="@color/grey" />

        <ImageView
            android:id="@+id/iv_edit_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:padding="4dp"
            android:src="@drawable/add_icon"
            app:tint="@color/black" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_name_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:text="Krishna Rana"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/fl_image"
        app:layout_constraintStart_toStartOf="@id/fl_image"
        app:layout_constraintTop_toBottomOf="@id/fl_image" />

    <TextView
        android:id="@+id/tv_email_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="krishna060702@gmail.com"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_profile"
        app:layout_constraintStart_toStartOf="@+id/tv_name_profile"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_profile" />

    <LinearLayout
        android:id="@+id/ll_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_email_profile"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_donate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground"
            android:focusable="true">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight=".2"
                app:tint="@color/black"
                android:src="@drawable/donate"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Donate"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_share"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight=".2"
                android:src="@drawable/share"
                app:tint="#4CAF50"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Share with Friends"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_wtsp_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight=".2"
                android:src="@drawable/whatsapp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Contact us on Whatsapp"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight=".2"
                android:src="@drawable/website"
                app:tint="#2196F3"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Check out our website"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight=".2"
                android:src="@drawable/email"
                app:tint="#F44336"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="theaprajita16@gmail.com"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

